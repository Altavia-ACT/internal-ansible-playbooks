APP_NAME="{{ app_name }}"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
{% if ssl %}
APP_URL=https://{{ domain }}
{% else %}
APP_URL=http://{{ domain }}
{% endif %}

LOG_CHANNEL=stack

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE={{ mysql_db_name }}
DB_USERNAME={{ user }}
DB_PASSWORD={{ mysql_passwd }}

BROADCAST_DRIVER=log
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
{% if ssl %}
SESSION_DOMAIN=https://{{ domain }}
{% else %}
SESSION_DOMAIN=http://{{ domain }}
{% endif %}
SESSION_SECURE_COOKIE=true
QUEUE_DRIVER=redis

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_DRIVER=smtp
MAIL_HOST=smtp.mandrillapp.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
